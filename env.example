# AI Model Configuration
# Use Anthropic Claude (recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative: Use OpenAI GPT models
# OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (for tracing and observability)
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=mcp-server-dev

# JustiFi Configuration (Payment Processing)
JUSTIFI_CLIENT_ID=your_justifi_client_id_here
JUSTIFI_CLIENT_SECRET=your_justifi_client_secret_here
JUSTIFI_BASE_URL=https://api.justifi.ai/v1

# Optional: Tool Selection (comma-separated list)
# Default: No tools enabled (secure by default)
# JUSTIFI_ENABLED_TOOLS=all                                    # Enable all tools
# JUSTIFI_ENABLED_TOOLS="retrieve_payout,list_payouts"         # Enable specific tools only
# JUSTIFI_ENABLED_TOOLS="retrieve_payout,get_payout_status"    # Custom combination

# Optional: Custom model settings
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TEMPERATURE=0.2
 